{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<style>
  .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
  .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
  <h1>Profile</h1>
  <h3></h3>
  <div>
  <label>Air Quality
    <input name="pollution" min="1" max="5" type="range">
  </label>
  </div>
  <div>
    <label>Accidents
      <input name="accidents" min="1" max="5" type="range" value="2">
    </label>
  </div>
  <div>
    <label>Fire
      <input name="fire" min="1" max="5" type="range" value="4">
    </label>
  </div>
</div>
{% endblock %}
